@{
    ViewBag.Title = "getAllProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}

<h2>All Projects</h2>

<div>
    <table class="all_projects">
        <tr class="row_title">
            <td class="title"></td>
            <td class="title">Name</td>
            <td class="title">Layout</td>
            <td class="title">Description</td>
            <td class="title">Category</td>
            <td class="title">Price</td>
            <td class="title">Publish date</td>
            <td class="title"></td>
        </tr>
        @foreach (var project in Model)
        {
            <tr class="row_content">
                <td class="content">@i</td>
                <td class="content">@project.name</td>
                <td class="content"></td>
                <td class="content">@project.description</td>
                <td class="content">@project.category</td>
                <td class="content">@project.price</td>
                <td class="content">@project.publish_date</td>
                <td class="content">
                    <a href="@Url.Action("Detail", "Project", new {id = project.id})">
                        <button>More detail...</button>
                    </a>
                </td>
            </tr>
            i++;
        }
    </table>
</div>
<style>
    .all_projects {
        width: 100%;
        border-collapse: collapse;
    }

    .row_title {
        background: linear-gradient(to bottom, #3498db, #2980b9);
        color: #fff;
        transition: all 0.3s;
    }

        .row_title:hover {
            background: linear-gradient(to bottom, #e74c3c, #c0392b);
            color: #fff;
            transform: scale(1.05);
        }

        .row_title td {
            padding: 15px;
            font-weight: bold;
            text-align: center;
        }

    .row_content {
        background: linear-gradient(to bottom, #ecf0f1, #bdc3c7);
        transition: all 0.3s;
    }

        .row_content:hover {
            background: linear-gradient(to bottom, #d2d7d3, #95a5a6);
            transform: scale(1.03);
        }

        .row_content td {
            padding: 15px;
            text-align: center;
        }

    .content a {
        text-decoration: none;
        color: #3498db;
        transition: color 0.3s;
    }

        .content a:hover {
            color: #e74c3c;
        }

    .content button {
        background: linear-gradient(to bottom, #3498db, #2980b9);
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .content button:hover {
            background: linear-gradient(to bottom, #e74c3c, #c0392b);
        }

    h2 {
        background: linear-gradient(to bottom, #9b59b6, #8e44ad);
        color: #fff;
        padding: 10px;
        text-align: center;
        transition: background 0.3s;
    }

        h2:hover {
            background: linear-gradient(to bottom, #e74c3c, #c0392b);
        }
</style>
