@model IEnumerable<Demo_WP1.Models.Cart>
@{
    ViewBag.Title = "PlaceOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PlaceOrder</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.project_id)</th>
        <th>@Html.DisplayNameFor(model => model.project_name)</th>
        <th>@Html.DisplayNameFor(model => model.category)</th>
        <th>@Html.DisplayNameFor(model => model.price)</th>
        <th>@Html.DisplayNameFor(model => model.publish_date)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.project_id</th>
            <th>@item.project_name</th>
            <th>@item.category</th>
            <th>@item.price</th>
            <th>@item.publish_date</th>
            <td>
                @Html.ActionLink("Delete", "CartDelete", new { id = item.project_id })
            </td>
        </tr>
    }
    <tr style="font-weight:bold; text-align:left; color:red">
        <td colspan="2"> Number project: @ViewBag.sumProjectQuantity </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right ">
        <td colspan="5">
            @Html.ActionLink("Clear Register", "AllCartDelete")
        </td>
    </tr>
    <tr style="font-weight:bold; color:yellow; text-align:right ">
        <td colspan="5">
            @Html.ActionLink("Save Register", "PlaceOrder", "Cart")
        </td>
    </tr>
</table>
@using Demo_WP1.Models
<h2 style="text-align:center">Information of Place an order</h2>
@{
    customer c = (customer)Session["Customer"];
}
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Customer ID: </td>
            <td style="font-weight:bold">@c.id</td>
        </tr>
        <tr style="height:40px">
            <td>Full name: </td>
            <td style="font-weight:bold">@c.full_name</td>
        </tr>
        <tr style="height:40px">
            <td>Email: </td>
            <td style="font-weight:bold">@c.email</td>
        </tr>
        <tr style="height:40px">
            <td>Phone: </td>
            <td style="font-weight:bold">@c.phone</td>
        </tr>
        <tr style="height:40px">
            <td>Address: </td>
            <td style="font-weight:bold">@c.address</td>
        </tr>
        <tr style="height:40px">
            <td>Date: </td>
            <td style="font-weight:bold">@DateTime.Now.ToShortDateString()</td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td style="font-weight:bold">
                <input type="submit" value="Confirm" class="btn btn-success" />
            </td>
        </tr>
    }
</table>
