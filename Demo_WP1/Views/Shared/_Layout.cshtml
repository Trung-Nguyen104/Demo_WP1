<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="~/images/favicon.ico">
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link rel="stylesheet" href="~/css/stuck.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/ihover.css">
    <title>@Session["PageTitle"]</title>
</head>
<body class="page1" id="top">
    <header>
        <section id="stuck_container">
            <div class="container">
                <div class="row">
                    <div class="grid_12">
                        <h1>
                            <a href="Home">
                                <img src="~/images/logo_web.png" alt="Logo alt">
                            </a>
                        </h1>
                        <div class="navigation">
                            <nav>
                                <ul class="menu">
                                    <li id="home">@Html.ActionLink("Home", "Home", "Home")</li>
                                    <li id="category">
                                        <a>Category</a>
                                        <script>
                                            const category = document.getElementById("category");
                                            const subMenu = category.querySelector(".sub-menu");

                                            // Xử lý sự kiện click trên phần tử category
                                            category.addEventListener("click", (event) => {
                                                if (event.target === category) {
                                                    category.classList.toggle("active");
                                                    if (category.classList.contains("active")) {
                                                        subMenu.style.display = "block";
                                                        subMenu.style.opacity = 1;
                                                    } else {
                                                        subMenu.style.display = "none";
                                                        subMenu.style.opacity = 0;
                                                    }
                                                }
                                            });

                                        </script>
                                        <ul class="sub-menu">
                                            <li>
                                                <a id="web" href="">Web</a>
                                            </li>
                                            <li>
                                                <a id="app" href="">App</a>
                                            </li>
                                            <li>
                                                <a id="game" href="">Game</a>
                                            </li>
                                            <li >
                                                <a id="database" href="">Database</a>
                                            </li>
                                        </ul>
                                    </li>   
                                    <li id="contacts">@Html.ActionLink("Contacts", "Contacts", "Home")</li>
                                    <li id="cart">
                                        <a href="@Url.Action("CartPartial", "Cart")">
                                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                    @{
                                        var customer = Session["Customer"] as Demo_WP1.Models.customer;
                                    }
                                    @if (Session["Customer"] != null)
                                    {
                                        <li id="user"><a href="@Url.Action("Account_Info", "User", new {id = customer.id})"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                                    }
                                    else
                                    {
                                        <li id="no_user"><a href="@Url.Action("Login","User")"><i class="fa fa-sign-in" aria-hidden="true"></i></a></li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </header>





    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer id="footer">
            <div class="container">
                <div class="row">
                    <div class="grid_12">
                        <div class="socials">
                            <a href="#" class="fa fa-twitter"></a>
                            <a href="#" class="fa fa-facebook"></a>
                            <a href="#" class="fa fa-google-plus"></a>
                            <a href="#" class="fa fa-youtube-play"></a>
                        </div>
                        <div class="copyright">
                            <span class="brand">Web Design</span> &copy; <span id="copyright-year"></span> | <a href="#">Privacy Policy</a> <div>Website designed by <a href="http://www.templatemonster.com/" rel="nofollow">TemplateMonster.com</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>





    <script src="~/js/jquery.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/jquery-migrate-1.1.1.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/superfish.js"></script>
    <script src="~/js/jquery.equalheights.js"></script>
    <script src="~/js/jquery.mobilemenu.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/tmStickUp.js"></script>
    <script src="~/js/jquery.ui.totop.js"></script>
    <script>
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });
            $('#stuck_container').tmStickUp({});
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
   .menu li#category{
       position:relative;
   }
    .sub-menu {
        position: absolute;
        list-style: none;
        display: none;
        opacity: 0;
    }
    #category:active .sub-menu {
        display: block;
        opacity: 1;
    }
        .sub-menu li:hover a {
            color: #fff;
        }
    #web:hover {
        border-top-left-radius: 7px;
        border-top-right-radius: 7px;
        color: white;
    }
    #app:hover, #game:hover {
        color:white;
    }
    #database:hover {
        border-bottom-left-radius: 7px;
        border-bottom-right-radius: 7px;
        color: white;
    }
</style>
